{
    "java": [
        "checkstyle -f xml -c etc/java.xml $filename"
    ],

    "js": [
        "sh etc/jshint.sh $filename"
    ],

    "scala": [
        "perl etc/scalastyle.pl etc/scalastyle_config.xml $filename"
    ],

    "coffee": [
        "perl etc/coffeelint.pl $filename"
    ],

    "cpp": [
        "perl etc/cpplint.pl $filename"
    ],

    "c": [
        "perl etc/cpplint.pl $filename"
    ],

    "hpp": [
        "perl etc/cpplint.pl $filename"
    ],

    "h": [
        "perl etc/cpplint.pl $filename"
    ],

    "pl": [
        "perl etc/perl-critic.pl $filename"
    ],

    "pm": [
        "perl etc/perl-critic.pl $filename"
    ],

    "css": [
        "sh etc/csslint.sh --format=checkstyle-xml $filename"
    ],

    "php": [
        "perl etc/phplint.pl $filename"
    ],

    "py": [
        "perl etc/pep8.pl $filename"
    ]
}